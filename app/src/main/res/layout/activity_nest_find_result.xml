<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".FindNest">

    <TextView
        android:id="@+id/findSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배치 완료되었습니다"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="148dp"
        android:textSize="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        />

    <ImageView
        android:id="@+id/findSuccessImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/nest" />

    <TextView
        android:id="@+id/findSuccessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가까운 파출소를\n찾았습니다"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="148dp"
        android:textAlignment="center"
        android:textSize="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/findSuccessButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />
</LinearLayout>