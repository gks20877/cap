<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:id="@+id/joinText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="관리자 화면"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35dp"/>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:id="@+id/manager_button1"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="보금자리 등록 정보" />
        <Button
            android:layout_marginBottom="20dp"
            android:id="@+id/manager_button2"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="보금자리 찾기 매칭 결과" />
        <Button
            android:layout_marginBottom="20dp"
            android:id="@+id/manager_button3"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일반신고 " />
        <Button
            android:id="@+id/manager_button4"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="긴급신고 " />
    </LinearLayout>


    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/joinRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="OK" />

</LinearLayout>